<div class="row">
  <div class="small-8 large-centered column">
    <h1>Learnit</h1>
    <h2>
      <% if @course[0] != nil %>
        <%= link_to image_tag("learning_ninja.png"), course_path(@course[0].id) %>
      <% else %>
        <%= link_to image_tag("learning_ninja.png"), new_course_path %>
      <% end %>
    </h2>
  </div>
</div>
<div class="row">
  <div class="small-8 large-centered column">
    <ul class="small-block-grid-6">
      <% @categories.each do |category| %>
        <li class="circle">
          <%= link_to category.name, category_path(category) %>
        </li>
      <% end %>
    </ul>
    <div class="panel">
      <h2>About</h2>
      <h4>Click the learning ninja to learn something</h4>
      <p>You will be sent to a random user submitted course</p>
      <p>It may have one lesson or twenty</p>
      <p>It may be about baking or bald eagles</p>
      <p>Learn something new
      <p>Add a course to teach someone else.</p>
      <p><%= link_to "Add a new course", new_course_path %></p>
      </div>
    </div>
  </div>
</div>



